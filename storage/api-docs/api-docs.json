                    {
                        "name": "id",
                        "in": "path",
                        "description": "Product ID to delete",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Product deleted"
                    }
                }
            }
        }
    },
